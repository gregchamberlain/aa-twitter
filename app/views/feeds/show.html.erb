<div class="row">
  <div class="col-md-3 col-sm-3 fixed">
    <section>
      <h1 class="user">Welcome <%= current_user.username %>!</h1>
      <h3 class="followers">Followers</h3>
      <ul class="followers">
        <% current_user.followers.each do |follower| %>
        <li><%= link_to follower.username, follower %></li>
        <% end %>
      </ul>
      <h3 class="followers">Following</h3>
      <ul class="followers">
        <% current_user.followees.each do |follower| %>
        <li><%= link_to follower.username, follower %></li>
        <% end %>
      </ul>
    </section>
  </div>
  <div class="col-md-6 col-sm-6 col-sm-offset-3">
    <b>Your Feed!</b>
    <div class="infinite-tweets">
    </div>
    <script type="text/template" id="tweets_template">
      <ul id="feed">
        <%% tweets.forEach((data) => { %>
          <li><a href="/users/<%%= data.user_id %>"><span class="username"><%%= data.user.username %></span></a> <span class="timestamp"><%%= moment(data.created_at).fromNow() %></span><br /><%%= data.content %></li>
          <%% }); %>
        </ul>
      </script>
      <a href="javascript:void[0]" id="load-more">Load More</a>
  </div>
  <div class="col-md-3 col-sm-3 fixed right">
    <section>
      <%= render "tweets/form" %>
    </section>
  </div>
</div>
